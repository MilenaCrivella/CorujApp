<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cf.milenaverissimo.corujapp.MenuActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/background"
        android:layout_marginTop="-90dp"
        android:id="@+id/background"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bttFamily"
        android:layout_marginBottom="40dp"
        android:background="@drawable/gradient"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_tips"
        android:text="Cuidados com a respiração"
        android:textSize="20dp"
        android:gravity="left"
        android:layout_marginTop="190dp"
        android:textColor="@android:color/white"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bttFamily"
        android:src="@drawable/btt_family"
        android:layout_centerVertical="true"
        android:layout_below="@+id/background"
        android:paddingLeft="@dimen/activity_horizontal_margin"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bttHealth"
        android:src="@drawable/btt_health"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/background"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bttFun"
        android:src="@drawable/btt_fun"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/background"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/bttFamily"
        android:layout_marginTop="30dp"
        android:id="@+id/view" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/health"
        android:src="@drawable/health_home"
        android:layout_alignBottom="@+id/main_tips"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"/>

    <ImageView
        android:layout_width="300px"
        android:layout_height="300px"
        android:id="@+id/imageButton"
        android:src="@drawable/tips_menu"
        android:layout_below="@+id/bttFamily" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageLike1"
        android:src="@drawable/like"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tip1"
        android:text="Cuidados com a respiração"
        android:textSize="15dp"
        android:gravity="left"
        android:textColor="@android:color/white"
        android:paddingLeft="@dimen/text_margin"
        android:layout_alignTop="@+id/imageLike1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tip2"
        android:text="Os sons e o bebê"
        android:textSize="15dp"
        android:gravity="left"
        android:textColor="@android:color/white"
        android:paddingLeft="@dimen/text_margin"
        android:layout_alignTop="@+id/imageLike2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageLike2"
        android:src="@drawable/like"
        android:layout_below="@+id/imageLike1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
